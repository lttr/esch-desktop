<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>

<BorderPane fx:id="rootPane" xmlns="http://javafx.com/javafx/null" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="cz.lttr.esch.controller.RootController">
  <top>
    <MenuBar BorderPane.alignment="CENTER">
      <Menu mnemonicParsing="false" text="File">
        <MenuItem mnemonicParsing="false" text="New"/>
        <MenuItem mnemonicParsing="false" text="Close"/>
      </Menu>
      <Menu mnemonicParsing="false" text="Help">
        <MenuItem mnemonicParsing="false" text="About"/>
      </Menu>
    </MenuBar>
  </top>
  <center>
    <TabPane tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
      <Tab closable="false" text="Intructors">
        <fx:include fx:id="instructorList" source="InstructorList.fxml"/>
      </Tab>
      <Tab text="Untitled Tab 1">
        <AnchorPane/>
      </Tab>
    </TabPane>
  </center>
  <bottom>
    <Pane prefHeight="20" BorderPane.alignment="CENTER"/>
  </bottom>
</BorderPane>
